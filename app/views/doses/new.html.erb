<div class="container">
  <div class="card mx-auto my-5" style="max-width: 700px;">
    <div class="row no-gutters">
      <div class="col-md-4">
        <%= image_tag "cocktail_form.jpg", alt: "Cocktails", class: 'card-img' %>
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title">Add a dose to <%= @cocktail.name %></h5>
          <%= render "form", cocktail: @cocktail, dose: @dose %>
          <%= link_to 'Back to cocktails', cocktails_path, class: 'btn btn-dark mt-3' %>
        </div>
      </div>
    </div>
  </div>
</div>